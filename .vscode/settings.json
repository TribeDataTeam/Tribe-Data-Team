{
    // Enable Ruff for Python files
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.ruffEnabled": true,
    // Set Ruff as the default formatter for Python files
    "editor.formatOnSave": true,
    "python.formatting.provider": "none",
    "editor.defaultFormatter": null,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
        }
    },
    // Ruff specific settings
    "ruff.lint.onSave": true,
    "ruff.organizeImports": true,
    // Line ending configuration for cross-platform consistency
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    // Jupyter notebook kernel configuration
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "jupyter.interactiveWindow.cellMarker.codeRegex": "^# ?%%|^# ?<codecell>|^# ?In\\[\\d*\\]:|^# ?In\\[ \\]:",
    "jupyter.interactiveWindow.cellMarker.markdownRegex": "^# ?%%\\s*\\[markdown\\]|^# ?<markdowncell>",
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "jupyter.askForKernelRestart": false,
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true
}
